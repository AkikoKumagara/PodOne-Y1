# Disable Status Bar
%wd

# Clear Backdrop
%X(d)

# Preload Font
%Fl(2,12-Nimbus.fnt)

# Preload Images
%xl(battery,battery.bmp,0,0,8)
%xl(playmodes,playmodes.bmp,0,0,12)
%xl(pbbd,progressbar_backdrop.bmp,0,0)

# Display Viewports
%Vd(playbackmode)
%Vd(title)
%?if(%St(battery display), =, numeric)<%Vd(batteryn)|%?if(%bc, =, c)<%Vd(batteryn)|%?if(%bp, =, p)<%Vd(batteryn)|%Vd(batteryg>>>
%Vd(topbar)
%Vd(metadata)
%?mv<%Vd(volume)|%Vd(freqpos)>

# Playback Mode Icons
%Vl(playbackmode,9,9,20,20,-)
%xd(playmodes,%mp)

# WPS Title
%Vl(title,56,6,369,28,-)
%ac%?if(%mh, =, h)<[ |>%?if(%lh, =, h)<…|>FM Radio%?if(%lh, =, h)<…|>%?if(%mh, =, h)< ]|>

# Battery (graphical)
%Vl(batteryg,433,9,40,20,-)
%?if(%bl, >, 88)<%xd(battery,5)|%?if(%bl, >, 63)<%xd(battery,4)|%?if(%bl, >, 38)<%xd(battery,3)|%?if(%bl, >, 13)<%xd(battery,2)|%xd(battery,1)>>>>

# Battery (numerical)
%Vl(batteryn,420,10,50,20,2)
%ar%bl%%

# Top Bar Separator Line
%Vl(topbar,0,38,480,1,-)
%dr(0,0,480,1)

# Preset Number
%Vl(metadata,9,48,462,21,2)
%al%?Ti<%Ti of %Tc|>

# Preset Name or RDS Name
%Vl(metadata,9,86,462,28,-)
%s%ac%?Tn<%Tn|%?ty<%ty|%tf MHz>>

# RDS Text
%Vl(metadata,9,116,462,28,-)
%s%ac%?tz<%tz|No RDS Data>

# Signal Strength
%Vl(metadata,9,152,462,28,-)
%s%ac%?tr<Weak|Good|Strong|Strong> Signal

# Mono / Stereo
%Vl(metadata,9,192,462,28,-)
%s%ac%?ts<Stereo|Mono>

# Frequency
%Vl(freqpos,9,292,84,28,-)
%ac%tf

# Frequency Bar
%Vl(freqpos,126,292,367,25,-)
%pb(0,0,367,25,progressbar.bmp,backdrop,pbbd)

# Volume
%Vl(volume,9,292,84,28,-)
%ac%?if(%pv, >, 0)<+|>%pvdB

# Volume Bar
%Vl(volume,126,292,367,25,-)
%pv(0,0,367,25,progressbar.bmp,backdrop,pbbd)